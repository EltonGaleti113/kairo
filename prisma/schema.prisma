generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//User 
model User {
  id      Int      @id @default(autoincrement())
  name    String
  wallets Wallet[]
}

//Wallet
model Wallet {
  id      Int     @id @default(autoincrement())
  userId  Int
  user    User    @relation(fields: [userId], references: [id])
  balance Decimal @default(0)
}

model FutureTransaction {
  id Int @id @default(autoincrement())
  transaction Decimal
}
